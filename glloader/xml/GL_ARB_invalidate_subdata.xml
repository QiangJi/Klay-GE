<?xml version='1.0'?>

<gl_extension name="GL_ARB_invalidate_subdata" reg_no="132">
	<functions>
		<function name="glInvalidateTexSubImage" return="void">
			<params>
				<param type="GLuint" name="texture"/>
				<param type="GLint" name="level"/>
				<param type="GLint" name="xoffset"/>
				<param type="GLint" name="yoffset"/>
				<param type="GLint" name="zoffset"/>
				<param type="GLsizei" name="width"/>
				<param type="GLsizei" name="height"/>
				<param type="GLsizei" name="depth"/>
			</params>
		</function>
		<function name="glInvalidateTexImage" return="void">
			<params>
				<param type="GLuint" name="texture"/>
				<param type="GLint" name="level"/>
			</params>
		</function>
		<function name="glInvalidateBufferSubData" return="void">
			<params>
				<param type="GLuint" name="buffer"/>
